<html>
    <head>
    <script src="../procedural_stuff/dist/gpu-browser.js"></script>
    </head>
    <body>
    
        
        
        

        <script>

            let arr1 = [1,2,3];
            let arr2 = [4,5,6];
            //add arrays using gpu.js
            let gpu = new GPU({mode: "gpu"});
            let addArrays = gpu.createKernel(function(a,b){
                return a[this.thread.x] + b[this.thread.x];
            }).setOutput([arr1.length]);
            let result = addArrays(arr1,arr2);
            console.log(result);


        </script>    
    </body>
</html>